# Server Configuration
PORT=3002
NODE_ENV=development

# Database (Shared with Day Tracker)
DATABASE_URL=postgresql://user:password@localhost:5432/day_tracker_db

# JWT (Shared with Day Tracker for auth validation)
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# Gemini AI
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash-preview-09-2025

# Google Cloud (for TTS/STT)
GOOGLE_APPLICATION_CREDENTIALS=./path/to/google-credentials.json
# OR use API keys
GOOGLE_CLOUD_PROJECT_ID=your_project_id

# Gmail API (for email monitoring)
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REDIRECT_URI=http://localhost:3002/api/ai/gmail/callback

# X API (Shared with opportunity-finder if available)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# AI Configuration
AI_WAKE_TIME=08:00
AI_RELEVANCE_THRESHOLD=0.7
MAX_CONVERSATION_HISTORY=100

# File Upload
MAX_AUDIO_SIZE=10485760
UPLOAD_DIR=./uploads

# Day Tracker API (if separate deployment)
DAY_TRACKER_API_URL=http://localhost:5000/api

# CORS
CORS_ORIGIN=http://localhost:19006
