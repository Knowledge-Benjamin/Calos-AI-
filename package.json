{
    "name": "ai-assistant-backend",
    "version": "1.0.0",
    "description": "AI Assistant backend service for Day Tracker app with voice interaction, task automation, and proactive features",
    "main": "src/server.ts",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "test": "jest",
        "test:ai": "ts-node src/scripts/testGemini.ts",
        "test:chat": "ts-node src/scripts/testChat.ts",
        "test:voice": "ts-node src/scripts/testVoice.ts",
        "test:automation": "ts-node src/scripts/testTaskAutomation.ts",
        "debug:chat": "ts-node src/scripts/debugChat.ts",
        "debug:tts": "ts-node src/scripts/debugTTS.ts",
        "migrate": "ts-node src/scripts/applyMigration.ts"
    },
    "keywords": [
        "ai",
        "assistant",
        "voice",
        "gemini",
        "day-tracker"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@google/generative-ai": "^0.21.0",
        "@google-cloud/text-to-speech": "^5.5.0",
        "@google-cloud/speech": "^6.7.0",
        "axios": "^1.7.9",
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "express-rate-limit": "^7.5.0",
        "googleapis": "^144.0.0",
        "helmet": "^8.0.0",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "node-cron": "^3.0.3",
        "pg": "^8.13.1",
        "uuid": "^11.0.3",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/morgan": "^1.9.9",
        "@types/multer": "^1.4.12",
        "@types/node": "^22.10.1",
        "@types/node-cron": "^3.0.11",
        "@types/pg": "^8.11.10",
        "@types/uuid": "^10.0.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.7.2"
    }
}